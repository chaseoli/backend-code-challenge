// used by vscode code editor to lint files
// ie: experimentalDecorators used in tsoa at ./api/...
{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "removeComments": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "listEmittedFiles": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./api/node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["./api/src"],
  "exclude": ["../node_modules"]
}
