{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      // Run API locally
      "name": "debug ./api",
      "type": "node",
      "runtimeExecutable": "node",
      "request": "launch",
      "protocol": "inspector",
      "runtimeArgs": [
        "--nolazy",
        "--inspect-brk=5858"
      ],
      "timeout": 30000,
      "port": 5858,
      "sourceMaps": true,
      "preLaunchTask": "ts-dev-client",
      "program": "${workspaceFolder}/api/src/app.ts",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": [
        "${workspaceRoot}/api/lib/**/*.js"
      ],
      "env": {
      }
    },
    {
      // Debug unit tests in TS
      "name": "test ./api", // LOCAL ONLY
      "type": "node",
      "runtimeExecutable": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "--exit",
        "${workspaceFolder}/api/src/spec/**/*.spec.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "env": {}
    }
  ]
}